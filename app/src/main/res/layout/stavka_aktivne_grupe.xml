<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/list_selector"
    >

    <TextView
        android:id="@+id/tvDatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="dd/MM/yyyy" />

    <TextView
        android:id="@+id/tvKursTipNaziv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Engleski jezik" />

    <TextView
        android:id="@+id/tvKursNaziv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvKursTipNaziv"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="A1.1" />

    <TextView
        android:id="@+id/tvKursKategorijaNaziv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:text="Jezici" />

    <TextView
        android:id="@+id/tvKursOpis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/tvKursNaziv"
        android:text="Opis" />
    <TextView
        android:id="@+id/tvImePrezimeZaposlenika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@+id/tvKursOpis"
        android:text="Ime Prezime" />
    <TextView
        android:id="@+id/tvPrijava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvKursOpis"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/tvPrijave"
        android:text="Prijava:" />
    <TextView

        android:id="@+id/tvPrijave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvKursOpis"
        android:layout_toLeftOf="@+id/tvCijena"
        android:layout_marginRight="10dp"
        android:text="6" />
    <TextView
        android:id="@+id/tvCijena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvKursOpis"
        android:layout_alignParentRight="true"
        android:text="Cijena" />
</RelativeLayout>